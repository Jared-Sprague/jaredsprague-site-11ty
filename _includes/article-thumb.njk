<article class="pbp-article-li vertical">
    <h2 class="pbp-article-title"><a
            href="{{ post.url | url }}">{% if post.data.title %}{{ post.data.title }}{% else %}
                <code>{{ post.url }}</code>{% endif %}</a></h2>
    <div class="pbp-article-summary">
        <section>
            {% if post.data.title %}{{ post.data.title }}{% else %}
                <code>{{ post.url }}</code>{% endif %}
        </section>
    </div>
    <div class="pbp-article-meta">
        <time datetime="{{ post.date | htmlDateString }}">
            {{ post.date | readableDate }}
        </time>
    </div>
    <a tabindex="-1" class="pbp-article-thumbnail" href="{{ post.url | url }}">
        <div class="pbp-article-thumbnail">
            <div class="glass-card">
                <div class="glass-card-ratio">
                    <picture>
                        <img class="glass-card-bg glass-card-bg-default"
                             src="{{ post.data.image | url }}">
                    </picture>
                    <div class="glass-card-border-outer"></div>
                    <div class="glass-card-border-inner"></div>
                </div>
            </div>
        </div>
    </a>
</article>
